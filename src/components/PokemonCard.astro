---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig } = Astro.props;
const id = url.split("/").at(-2);

const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/home/${id}.png`;
---

<a
  href={`/pokemon/${id}`}
  class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
      border: !isBig,
    },
  ]}
>
  <img
    transition:name={`${name}-image`}
    src={imageUrl}
    alt=""
    class:list={[
      {
        "w-52 h-52": isBig,
        "w-32 h-32": !isBig,
      },
    ]}
  />
  <h3
    class:list={[
      "capitalize",
      {
        "text-4xl": isBig,
      },
    ]}
  >
    #{id}
    {name}
  </h3>
</a>
