---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig } = Astro.props;
const id = url.split("/").at(-2);

const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href={`/pokemons/${name}`}
  class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
      border: !isBig,
    },
  ]}
>
  <img
    src={imageUrl}
    alt=""
    class:list={["w-16 h-16", { "w-26": !isBig, "h-6": !isBig }]}
  />
  <h3>#{id} {name}</h3>
</a>
